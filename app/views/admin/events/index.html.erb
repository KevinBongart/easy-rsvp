<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Date</th>
      <th scope="col">RSVPs</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <th scope="row"><%= link_to event.id, event %></th>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.rsvps.length %></td>
      </tr>
    <% end %>
  </tbody>
</table>
